                <button class="btn btn-remove" onclick="removeTip(this)">√ó</button>
            `;
            container.appendChild(tipItem);
        }
        
        function removeTip(button) {
            if (document.querySelectorAll('.tip-item').length > 1) {
                button.parentElement.remove();
            }
        }
        
        // –ì–µ–Ω–µ—Ä–∞—Ü–∏—è –∫–æ–¥–∞
        function generateCode() {
            const tips = Array.from(document.querySelectorAll('.tip-input'))
                .map(input => input.value)
                .filter(text => text.trim() !== '');
            
            const size = document.getElementById('catSize').value;
            const position = document.getElementById('catPosition').value;
            const videoFilePath = videoPath.value.trim() || 'cat-animation.mp4';
            const enableDragging = document.getElementById('enableDragging').checked;
            const enableClose = document.getElementById('enableClose').checked;
            const enableMinimize = document.getElementById('enableMinimize').checked;
            
            const sizeMap = {
                small: '120px',
                medium: '180px',
                large: '240px'
            };
            
            const positionMap = {
                'bottom-right': 'bottom: 20px; right: 20px;',
                'bottom-left': 'bottom: 20px; left: 20px;',
                'top-right': 'top: 20px; right: 20px;',
                'top-left': 'top: 20px; left: 20px;'
            };
            
            const code = `
<!-- –ö–æ—Ç-–ø–æ–º–æ—â–Ω–∏–∫ -->
<div class="cat-assistant" style="${positionMap[position]} width: ${sizeMap[size]}; height: ${sizeMap[size]};">
    <div class="cat-video-container">
        <video class="cat-video" loop muted autoplay>
